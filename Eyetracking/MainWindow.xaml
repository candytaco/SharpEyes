            <CheckBox x:Name="ShowPupilOpacityCheckBox" Content="Variable transparency overlay" HorizontalAlignment="Right" Margin="0,62,142.8,0" VerticalAlignment="Top" IsChecked="False" />

        </Grid>

    </Grid>
</Window>
